<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app1="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="180dp"
              android:background="@drawable/location_model_detail_item_background"
              android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/news_recycle_image_header"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.25"
        android:scaleType="fitXY"
        android:src="@drawable/placeholder"
        android:visibility="visible"/>


    <ProgressBar
        android:id="@+id/progressBar_mainpage_news_header"
        style="?android:attr/progressBarStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_weight="2"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingEnd="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="right"
            android:padding="4dp">

            <ProgressBar
                android:id="@+id/news_mainpage_recycle_loading_detail_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <ir.daneshjou_yaar.Custom_Text_View
                android:id="@+id/news_mainpage_recycle_title_header"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="تیتر"
                android:textColor="#000000"
                android:textDirection="rtl"
                app1:fontname="Titr.ttf"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="right"
            android:padding="4dp">


            <ir.daneshjou_yaar.Custom_Text_View
                android:id="@+id/news_mainpage_recycle_description_header"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="توضیحات : "
                android:textColor="#000000"
                android:textDirection="rtl"
                app1:fontname="Titr.ttf"/>


        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primary_light"
            tools:ignore="ContentDescription"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="end"
            android:visibility="visible">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight=".08"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_access_time_black_48dp"
                tools:ignore="ContentDescription"/>

            <ir.daneshjou_yaar.Custom_Text_View
                android:id="@+id/news_mainpage_recycle_date_header"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="زمان"
                android:textColor="#000000"
                android:textDirection="rtl"
                android:textSize="14sp"
                app1:fontname="IRKamran.ttf"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
