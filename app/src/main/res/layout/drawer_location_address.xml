<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/right_drawer"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_gravity="start|end"
            android:background="@color/colorPrimary"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingTop="26dp">

        <ir.daneshjou_yaar.Custom_Text_View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="جهت ثبت موقعیت شغلی خود ، اطلاعات زیر را وارد و سپس دکمه ثبت را لمس نمایید :"
            android:textColor="@color/icons"
            android:textSize="18sp"/>

        <ir.daneshjou_yaar.Custom_TextInput_Layout
            android:id="@+id/right_drawer_new_location_title_inputlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/right_drawer_new_location_title_edittxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:hint="عنوان شغل"
                android:inputType="textPersonName"
                android:textColor="@color/icons"/>

        </ir.daneshjou_yaar.Custom_TextInput_Layout>


        <ir.daneshjou_yaar.Custom_TextInput_Layout
            android:id="@+id/right_drawer_new_location_description_inputlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusedByDefault="false">

            <EditText
                android:id="@+id/right_drawer_new_location_description_edittxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:hint="توضیح شغل (ساعت کاری و شماره تماس و ...)"
                android:inputType="textMultiLine"
                android:textColor="@color/icons"/>

        </ir.daneshjou_yaar.Custom_TextInput_Layout>


        <Button
            android:id="@+id/right_drawer_new_location_map_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@color/colorPrimaryDark"
            android:elevation="0dp"
            android:padding="0dp"
            android:text="ثبت موقعیت دقیق"/>

        <!--<ir.eqtdaneshjou_yaar_yar.Custom_TextInput_Layout
            android:id="@+id/right_drawer_new_location_phone_inputlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/right_drawer_new_location_phone_edittxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:hint="شماره تماس "
                android:inputType="number"
                android:nextFocusLeft="@id/right_drawer_new_location_phone_edittxt"
                android:nextFocusUp="@id/right_drawer_new_location_phone_edittxt"
                android:textColor="@color/icons"/>

        </ir.eqtdaneshjou_yaar_yar.Custom_TextInput_Layout>-->

        <ir.daneshjou_yaar.Custom_TextInput_Layout
            android:id="@+id/right_drawer_new_location_address_inputlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/right_drawer_new_location_address_edittxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:hint="آدرس "
                android:inputType="text"
                android:nextFocusLeft="@id/right_drawer_new_location_address_edittxt"
                android:nextFocusUp="@id/right_drawer_new_location_address_edittxt"
                android:textColor="@color/icons"/>

        </ir.daneshjou_yaar.Custom_TextInput_Layout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:orientation="horizontal"
            >

            <ir.daneshjou_yaar.Custom_Text_View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="دسته بندی :"
                android:textColor="#ffff"
                android:textSize="18sp"/>


            <Spinner
                android:id="@+id/right_drawer_new_location_categories_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


        </LinearLayout>

        <ir.daneshjou_yaar.Custom_Text_View
            android:id="@+id/right_drawer_new_location_choosing_photo_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="لطفا تصویر مربوط به مغازه را انتخاب نمایید :"
            android:textColor="@color/icons"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/right_drawer_new_location_photo_camera_linear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@drawable/ic_add_a_photo_white_48dp"/>

                <ir.daneshjou_yaar.Custom_Text_View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="دوربین"
                    android:textColor="@color/icons"
                    android:textSize="18sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/right_drawer_new_location_photo_library_linear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@drawable/ic_photo_library_white_48dp"/>

                <ir.daneshjou_yaar.Custom_Text_View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="گالری"
                    android:textColor="@color/icons"
                    android:textSize="18sp"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/right_drawer_new_location_photo_choosed"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <CheckBox
            android:id="@+id/right_drawer_new_location_agreement_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|start"
            android:layoutDirection="rtl"
            android:text="تمامی قوانین و شرایط را مطالعه و قبول دارم"
            android:textColor="@color/icons"/>


        <Button
            android:id="@+id/right_drawer_new_location_register_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="#04931c"
            android:text="ثبت"
            android:textColor="@color/icons"/>


    </LinearLayout>


</ScrollView>